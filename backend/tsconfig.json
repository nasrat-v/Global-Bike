{
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES6",
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"]
    }
  }
}
